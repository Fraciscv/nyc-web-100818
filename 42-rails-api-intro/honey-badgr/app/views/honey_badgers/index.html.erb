<p id="notice"><%= notice %></p>

<h1>Honey Badgers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @honey_badgers.each do |honey_badger| %>
      <tr>
        <td><%= honey_badger.name %></td>
        <td><%= honey_badger.weight %></td>
        <td><img height="100" width="100" src="<%= honey_badger.img %>"/></td>
        <td><%= link_to 'Show', honey_badger %></td>
        <td><%= link_to 'Edit', edit_honey_badger_path(honey_badger) %></td>
        <td><%= link_to 'Destroy', honey_badger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Honey Badger', new_honey_badger_path %>
